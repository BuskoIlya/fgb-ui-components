{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["es2015", "dom"],
        "module": "commonjs",
        "outDir": "./dist/",
        "paths": {
            "common": ["./src/common"],
            "components": ["./src/components"],
        },
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src"],
    "files": ["src/types/declarations.d.ts"]
}